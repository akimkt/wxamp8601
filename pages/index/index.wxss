/**index.wxss**/
page{
  background-color: #F0F0F0;
}
swiper{
  height: 320rpx;
}
image{
  width:750rpx;
  height:320rpx;
}

.index-title{
  font-size: 28rpx;
  padding:20rpx 0 28rpx 30rpx;
  font-weight: bold;
}
.item{
  margin-bottom: 20rpx;
  position: relative;
  z-index: 0;
}
.item .xin{
  position: absolute;
  top: 30rpx;
  right: 60rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #FE6249;
  text-align: center;
  line-height: 50rpx;
}
.item .info {
  box-sizing:border-box;
  height: 180rpx;
  padding: 16rpx 30rpx;
  position: relative;
  background-color: #fff;
}
.item .info .title{
  width: 590rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}
.item .info .status {
  position: absolute;
  right:30rpx;
  top:16rpx;
  font-size: 30rpx;
  color: #FE6249;

}
.item .info .small{
  position: absolute;
  bottom:20rpx;
}
.item .info .small text{
  padding-right: 30rpx;
  font-size: 22rpx;
  color: #B4B4B4;
}
.item .hoticon{
  height: 58rpx;
  width: 136rpx;
  position: absolute;
  top: -10rpx;
  left: 30rpx;
  z-index: 1;
  text-align: center;
}
.item .on{
  background: url("https://akimkt.github.io/wxamp8601/images/status_active.png");
  background-size: 136rpx 58rpx;
  }
.item .end{
  background: none;
  background-color: #ccc;
}
.item .hoticon text{
  color: #fff;
  font-size: 24rpx;
}